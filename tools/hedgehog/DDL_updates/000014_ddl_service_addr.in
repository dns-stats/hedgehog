NEW_DDL_SERIAL=14
REQUIRED_DDL_SERIAL=$(( $NEW_DDL_SERIAL - 1 ))
NEW_API_VERSION=11
REQUIRED_API_VERSION=$(( $NEW_API_VERSION - 1 ))

DSC_SCHEMA="dsc"

usage () {
    echo
    echo "Usage: $(basename $0) options"
    echo
    echo "Supported options:"
    echo "  -h Show this help."
    exit 1
}


while getopts ":h" opt; do
    case $opt in
        h  ) usage ;;
        \? ) usage ;;
    esac
done

# Need a write user to update DB
echo "`date`: $0 COMMENCED"
a=$(@LIBEXEC@/check_user_perms -w -C $REQUIRED_API_VERSION -s $REQUIRED_DDL_SERIAL)
if [ $? -ne 0 ] ; then
  echo $a
  exit 1
fi
eval $a
export PGPASSWORD=$PGPASSWORD

echo "Starting"
psql $CONN_STRING <<EOF
BEGIN;
CREATE TABLE $DSC_SCHEMA.service_addr (id SERIAL PRIMARY KEY, server_id INTEGER REFERENCES $DSC_SCHEMA.server (id), address IPADDRESS NOT NULL, UNIQUE (server_id, address));
UPDATE $DSC_SCHEMA.version SET version = $NEW_API_VERSION;
INSERT INTO $DSC_SCHEMA.internal_version ( serial, script, description, applied ) VALUES ( $NEW_DDL_SERIAL, '$0', 'Added service address table', now() );
COMMIT;
EOF

echo "`date`: $0 COMPLETED"
