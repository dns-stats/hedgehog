#!/bin/sh
set -e

if test "$1" = "purge"; then
    # this could be wrapped inside debconf question whether to remove the data or not
    rm -rf /usr/share/hedgehog/www
    rm -rf /usr/share/hedgehog

    rm -rf /var/lib/hedgehog/www
    dpkg-statoverride --remove /var/lib/hedgehog/www >/dev/null 2>/dev/null || true
fi

